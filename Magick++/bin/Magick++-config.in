#!/bin/sh
#
# Configure options script for re-calling compilation
# options required to use the Magick++ library.
#
# Concept derived from gtk-config in the Gtk package except that Autoconf-style
# configuration information is presented instead so that it may be used more
# effictively in configure scripts.
#
usage="\
Usage: Magick++-config [--version] [--cxxflags] [--cppflags] [--ldflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --version)
      echo @MAJOR_VERSION@.@MINOR_VERSION@.@MICRO_VERSION@
      ;;
    --cppflags)
      echo "-DHAVE_CONFIG_H @CPPFLAGS@"
      ;;
    --cxxflags)
      echo '@CXXFLAGS@'
      ;;
    --ldflags)
      echo '@LDFLAGS@'
      ;;
    --libs)
      LIBS=`echo -lMagick++ -lMagick @MAGICKLIB@ @LIB_JBIG@ @LIB_HDF@ @LIB_LCMS@ @LIB_TIFF@ @LIB_TTF@ @LIB_JP2@ @LIB_JPEG@ @LIB_XML@ @LIB_PNG@ @LIB_FPX@ @LIB_DPS@ @LIB_XEXT@ @LIB_XT@ @LIB_X11@ @LIB_BZLIB@ @LIB_ZLIB@ @LIB_THREAD@ @LIB_LF@ @LIB_MATH@ | sed -e 's/  */ /g'`
      echo "$LIBS"
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

